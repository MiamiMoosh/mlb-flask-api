import React from 'react';
import { Text, View, StyleSheet, Image } from 'react-native';
import * as Animatable from 'react-native-animatable';
import defaultCardImage from '../assets/defaultCard.png';

const rarityColors = {
  common: '#999',
  rare: '#2a9df4',
  epic: '#a033ff',
  legendary: '#ffa502'
};

const rarityAnimations = {
  common: 'fadeIn',
  rare: 'bounceIn',
  epic: 'zoomIn',
  legendary: 'rubberBand'
};

const getRarityFromName = (name) => {
  const lowered = name.toLowerCase();
  if (lowered.match(/legendary|dragon|phoenix/)) return 'legendary';
  if (lowered.match(/epic|crystal|storm/)) return 'epic';
  if (lowered.match(/rare|silver|arcane/)) return 'rare';
  return 'common';
};

export default function AnimatedCard({ name, imageSource, rarity = 'common' }) {
  const resolvedSource = imageSource ? { uri: imageSource } : defaultCardImage;
  const borderColor = rarityColors[rarity] || '#aaa';
  const animation = rarityAnimations[rarity] || 'fadeIn';

  return (
    <Animatable.View animation={animation} duration={900} style={[styles.card, { borderColor }]}>
      <Image
        source={resolvedSource}
        style={styles.image}
        resizeMode="cover"
      />
      <View style={styles.overlay}>
        <Text style={styles.text}>{name}</Text>
        <Text style={[styles.rarityLabel, { color: borderColor }]}>
          {rarity.charAt(0).toUpperCase() + rarity.slice(1)}
        </Text>
      </View>
    </Animatable.View>
  );
}

const styles = StyleSheet.create({
  card: {
    width: 80,
    height: 100,
    margin: 8,
    borderRadius: 8,
    overflow: 'hidden',
    borderWidth: 2,
    backgroundColor: '#fff',
    elevation: 5,
  },
  image: {
    width: '100%',
    height: '100%',
  },
  overlay: {
    position: 'absolute',
    bottom: 0,
    backgroundColor: 'rgba(0,0,0,0.5)',
    width: '100%',
    paddingVertical: 4,
    alignItems: 'center',
  },
  text: {
    color: 'white',
    fontWeight: '600',
    fontSize: 14,
  },
  rarityLabel: {
    fontSize: 11,
    marginTop: 2,
    fontWeight: 'bold',
  }
});